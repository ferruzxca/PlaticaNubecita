{% extends 'base.html.twig' %}

{% block title %}Nueva contraseña | PlaticaNubecita{% endblock %}

{% block body %}
<main class="simple-auth-shell">
    <section class="card card--wide">
        <h1>Restablecer contraseña</h1>
        <p>Define tu nueva contraseña para recuperar acceso.</p>

        <form id="reset-password-form" class="stack-form" action="{{ path('api_auth_reset_password') }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('auth_reset') }}">
            <input type="hidden" name="token" value="{{ token }}">
            <label>Nueva contraseña
                <input name="password" type="password" minlength="8" maxlength="72" required autocomplete="new-password">
            </label>
            <button type="submit">Guardar contraseña</button>
        </form>

        <p id="reset-feedback" class="feedback"></p>
        <a href="{{ path('app_home') }}">Volver al inicio</a>
    </section>
</main>
{% endblock %}

{% block scripts %}
<script src="{{ asset('js/auth.js') }}" defer></script>
{% endblock %}
